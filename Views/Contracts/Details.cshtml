@model Contract_Administrator.Models.Contract

@{
    ViewData["Title"] = "Podrobnosti smlouvy";
}

<div class="row">
    <div class="col-lg">
        <h1>Smlouva @Html.DisplayFor(model => model.RegistrationNumber)</h1>
        <h4>Podrobnosti</h4>
    </div>
    <a asp-action="Index" class="col-lg-auto d-none d-lg-flex">Zpět na přehled</a>
    <hr />
</div>

<div>
    <dl class="row">
        <dt class="my-2">
            <a href="@Model.File" target="_blank" class="btn btn-secondary btn-outline-secondary">Zobrazit smlouvu</a>
        </dt>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.RegistrationNumber)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RegistrationNumber)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Institution)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Institution)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ContractAdmin)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ContractAdmin)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ConclusionDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ConclusionDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ValidityDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ValidityDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ExpirationDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ExpirationDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Client)
        </dt>
        <dd class="col-sm-10">
            <a asp-controller="Clients" asp-action="Details" asp-route-id="@Model.ClientId">
                <div>@Html.DisplayFor(model => model.Client.FirstName) @Html.DisplayFor(model => model.Client.LastName)</div>
            </a>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ContractAdviser)
        </dt>
        <dd class="col-sm-10">
            @foreach (var item in Model.ContractAdviser)
            {
                <a asp-controller="Advisers" asp-action="Details" asp-route-id="@item.Adviser.Id">
                   @item.Adviser.FirstName @item.Adviser.LastName
                </a>
                if (item.IsAdmin)
                {
                    <span> (správce smlouvy)</span>
                }
                <br />
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-secondary btn-outline-secondary">Upravit</a>
    <a asp-action="Index" class="btn btn-close-white">Zpět</a>
</div>
