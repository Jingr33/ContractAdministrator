@model Contract_Administrator.Models.Contract

@{
    ViewData["Title"] = "Odstranění smlouvy";
}

<div class="row">
    <div class="col-lg">
        <h3 class="my-3">Opravdu chcete odstranit smlouvu @Html.DisplayFor(model => model.RegistrationNumber)</h3>
    </div>
    <a asp-action="Index" class="col-lg-auto d-none d-lg-flex">Zpět na přehled</a>
    <hr />
</div>

<div>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.RegistrationNumber)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RegistrationNumber)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Institution)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Institution)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ContractAdmin)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ContractAdmin)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ConclusionDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ConclusionDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ValidityDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ValidityDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ExpirationDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ExpirationDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Client)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Client.FirstName) @Html.DisplayFor(model => model.Client.LastName)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Smazat" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-close-white">Zpět</a>
    </form>
</div>
