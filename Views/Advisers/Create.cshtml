@model Contract_Administrator.Models.Adviser

@{
    ViewData["Title"] = "Nový poradce";
}

<div class="row">
    <h3 class="col-lg">Nový poradce</h3>
    <a asp-action="Index" class="col-lg-auto d-none d-lg-flex">Zpět na přehled</a>
</div>
<hr />

<div class="row">
    <form method="post" asp-action="Create" class="container-fluid">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row">
            <div class="form-group my-3 col-lg-6">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group my-3 col-lg-6">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="form-group my-3 col-lg-6">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group my-3 col-lg-6">
                <label asp-for="TelNumber" class="control-label"></label>
                <input asp-for="TelNumber" class="form-control" />
                <span asp-validation-for="TelNumber" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="form-group my-3 col-lg-6">
                <label asp-for="PersonalIdNum" class="control-label"></label>
                <input asp-for="PersonalIdNum" class="form-control" />
                <span asp-validation-for="PersonalIdNum" class="text-danger"></span>
            </div>
            <div class="form-group my-3 col-lg-6">
                <label asp-for="Age" class="control-label"></label>
                <input asp-for="Age" class="form-control" />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="form-group my-3 col-lg-12">
                <input type="submit" value="Přidat poradce" class="btn btn-primary text-light" />
                <a asp-action="Index" class="btn btn-close-white">Zpět</a>
            </div>
        </div>  
    </form>
</div>

<div>
</div>

