@model Contract_Administrator.Models.Client

@{
    ViewData["Title"] = "Změna klienta";
}

<div class="row">
    <div class="col-lg">
        <h1>Klient - změna</h1>
    </div>
    <a asp-action="Index" class="col-lg-auto d-none d-lg-flex">Zpět na přehled</a>
    <hr />
</div>

<div class="row">
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <div class="row">
            <div class="form-group my-3 col-lg-6">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group my-3 col-lg-6">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="form-group my-3 col-lg-6">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group my-3 col-lg-6">
                <label asp-for="TelNumber" class="control-label"></label>
                <input asp-for="TelNumber" class="form-control" />
                <span asp-validation-for="TelNumber" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="form-group my-3 col-lg-6">
                <label asp-for="PersonalIdNum" class="control-label"></label>
                <input asp-for="PersonalIdNum" class="form-control" />
                <span asp-validation-for="PersonalIdNum" class="text-danger"></span>
            </div>
            <div class="form-group my-3 col-lg-6">
                <label asp-for="Age" class="control-label"></label>
                <input asp-for="Age" class="form-control" />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="form-group my-3 col-lg-12">
                <input type="submit" value="Uložit změny" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-close-white">Zpět</a>

            </div>
        </div>
    </form>
</div>